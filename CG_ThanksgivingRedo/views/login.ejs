<% include partials/header %>
<div class="col-sm-6 col-sm-offset-3">
  <title><%= title %></title>
        <h1 id="header">Login</h1>
        <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>
        <form class="form" action="/login/complete" method="POST" name="loginform">
          <div class="form-group">
            <label>Email</label>
            <input name="email" class="form-control" id="email" placeholder="Email"/>
          </div>
          <div class="form-group">
            <label>Password</label>
            <input name="password" type="password" id="password" class="form-control" placeholder="Password"  />
          </div>        
          <% if(errors != null){ %>
            <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <ul>
                <% errors.forEach(function(error){ %>
                    <li><%= error.msg %> </li>
                <% }) %>
            </ul>
          </div>
            <% } %>
          <input type="submit" onClick="clientLog()" name="loginBtn" value="Login">
        </form>
</div>
<script src="https://www.gstatic.com/firebasejs/4.6.2/firebase.js"></script>
<script src = "/js/clientFirebase.js"></script>

<% include partials/footer %>